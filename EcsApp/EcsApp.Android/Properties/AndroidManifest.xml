<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:versionCode="1" android:versionName="1.0" package="com.companyname.ecsapp">
    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="28" />
    <application android:label="EmployeeClockingApp.Android"></application>
    
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to access Android Fingerprint information -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- Permission to access Samsung Fingerprint information -->
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVERY" />

    <!-- Permission need to access coarse and fine location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- For Android 5.0 (API level 21) - Declaration that the app uses the location hardware features -->
    <uses-permission android:name="android.hardware.location" android:required="false" />
    <uses-permission android:name="android.hardware.location.gps" android:required="false" />
    <uses-permission android:name="android.hardware.location.network" android:required="false" />
</manifest>